<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro"
       name="mobilerobot" >

  <xacro:include filename="$(find mobilerobot_description)/urdf/mobile_chassis.urdf.xacro"/>
  <xacro:include filename="$(find mobilerobot_description)/urdf/manipulator.urdf.xacro"/>
  <xacro:include filename="$(find mobilerobot_description)/urdf/ball_screw.transmission.xacro"/>

  <xacro:mobile_chassis prefix=""/>
  <xacro:manipulator prefix="" joint2_upper_limit="0" joint4_lower_limit="0" joint4_upper_limit="${2*pi/3}"/>

  <xacro:ball_screw_transmission prefix="" hw_interface="hardware_interface/PositionJointInterface"/>

  <xacro:property name="ball_screw_lower_limit" value="-0.77"/>
  <xacro:property name="ball_screw_upper_limit" value="0"/>

  <link name="world" />

  <joint name="world_joint" type="fixed">
    <parent link="world" />
    <child link = "base_link" />
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
  </joint>

  <joint name="ball_screw_joint" type="prismatic">
    <parent link="base_link" />
    <child link="ball_screw_link" />
    <origin xyz="0.305 0 1.1" rpy="0 0 0" />
    <limit lower="${ball_screw_lower_limit}" upper="${ball_screw_upper_limit}" effort="1" velocity="1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="ball_screw_link">
    <visual>
      <origin xyz="0.028 -0.11 0" rpy="${pi/2} 0 ${pi/2}" />
      <geometry>
        <mesh filename="package://mobilerobot_description/meshes/ball_screw_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="LightGrey">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="manipulator_fixed" type="fixed">
    <parent link="ball_screw_link"/>
    <child link="link1"/>
    <origin xyz="0.048 0 0.075" rpy="0 0 0"/>
  </joint>

  <joint name="zed_support_fixed" type="fixed">
    <parent link="link7"/>
    <child link="zed_support"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="zed_support">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://mobilerobot_description/meshes/zed_support.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="LightGrey">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="hokuyo_fixed" type="fixed">
    <parent link="base_link"/>
    <child link="hokuyo_link"/>
    <origin xyz="0.373 0 0.005" rpy="0 0 0"/>
  </joint>

  <link name="hokuyo_link">
    <visual>
      <origin xyz="-0.0192 -0.0192 0" rpy="1.57079632679 0 1.57079632679"/>
      <geometry>
        <mesh filename="package://mobilerobot_description/meshes/hokuyo_urg_04.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="LightGrey">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="laser_fixed" type="fixed">
    <parent link="hokuyo_link"/>
    <child link="laser_scan"/>
    <origin xyz="-0.0192 -0.0192 0.065" rpy="0 0 0"/>
  </joint>

  <link name="laser_scan"/>

</robot>
